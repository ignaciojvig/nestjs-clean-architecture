{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@root/*": [
        "./*"
      ],
      "@services/*": [
        "src/api/1 - Services/*"
      ],
      "@domain/*": [
        "src/api/2 - Domain/*"
      ],
      "@infrastructure/*": [
        "src/api/3 - Infrastructure/*"
      ],
    },
    "incremental": true
  }
}